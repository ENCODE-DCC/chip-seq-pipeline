{
  "name": "input_shield",
  "title": "ChIP-seq Input Shield",
  "summary": "Fetches input files and parameters from appropriate places and feeds them into the ChIP-seq pipeline",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "ENCODE Analysis Pipeline"
  ],
  "inputSpec": [
    {
      "name": "reads1",
      "label": "reads1",
      "class": "array:string",
      "optional": false
    },
    {
      "name": "reads2",
      "label": "reads2",
      "class": "array:string",
      "optional": true,
      "default": []
    },
    {
      "name": "crop_length",
      "label": "Native or length to crop reads to",
      "class": "string",
      "optional": true,
      "default": "native"
    },
    {
      "name": "reference_tar",
      "label": "Over-rides the otherwise automatically-chosen reference",
      "class": "string",
      "optional": true,
      "default": ""
    },
    {
      "name": "bwa_aln_params",
      "label": "Command-line parameters to BWA aln",
      "class": "string",
      "optional": true,
      "default": "-q 5 -l 32 -k 2"
    },
    {
      "name": "bwa_version",
      "label": "BWA version",
      "class": "string",
      "optional": true,
      "default": "0.7.10"
    },
    {
      "name": "samtools_version",
      "label": "samtools version",
      "class": "string",
      "optional": true,
      "default": "1.0"
    },
    {
      "name": "key",
      "class": "string",
      "optional": true
    },
    {
      "name": "keyfile",
      "class": "string",
      "optional": true,
      "default": "keypairs.json"
    },
    {
      "name": "debug",
      "label": "debug mode",
      "class": "boolean",
      "optional": true,
      "default": false
    }
  ],
  "outputSpec": [
    {
      "name": "reads1",
      "label": "reads1",
      "class": "file"
    },
    {
      "name": "reads2",
      "label": "reads2",
      "class": "file",
      "optional": true
    },
    {
      "name": "crop_length",
      "label": "Native or length to crop reads to",
      "class": "string"
    },
    {
      "name": "reference_tar",
      "label": "Over-rides the otherwise automatically-chosen reference",
      "class": "file"
    },
    {
      "name": "bwa_aln_params",
      "label": "Command-line parameters to BWA aln",
      "class": "string"
    },
    {
      "name": "bwa_version",
      "label": "BWA version",
      "class": "string"
    },
    {
      "name": "samtools_version",
      "label": "samtools version",
      "class": "string"
    },
    {
      "name": "debug",
      "label": "debug mode",
      "class": "boolean"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/input_shield.py",
    "execDepends": [
      {"name": "awscli", "package_manager": "pip"}
    ],
    "systemRequirements": {
      "main": {"instanceType": "mem2_hdd2_x1"}
    }
  },
  "access": {
    "network": ["*"],
    "project": "UPLOAD",
    "allProjects": "UPLOAD"
  },
  "authorizedUsers": []
}
