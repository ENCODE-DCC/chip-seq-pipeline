{
  "name": "spp",
  "title": "SPP",
  "summary": "SPP Peak Caller",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "ENCODE Analysis Pipeline"
  ],
  "inputSpec": [
    {
      "name": "experiment",
      "label": "ChIP tagAlign",
      "class": "file",
      "optional": false
    },
    {
      "name": "control",
      "label": "Input or IgG control tagAlign",
      "class": "file",
      "optional": false
    },
    {
      "name": "xcor_scores_input",
      "label": "Cross-correlation scores file from previous pipeline step",
      "class": "file",
      "optional": false
    },
    {
      "name": "npeaks",
      "label": "Maximum number of peaks to call",
      "class": "int",
      "optional": true,
      "default": 300000
    },
    {
      "name": "nodups",
      "label": "Have duplicates been removed from the input tag file",
      "class": "boolean",
      "optional": true,
      "default": true
    },
    {
      "name": "bigbed",
      "label": "Generate bigBed files",
      "class": "boolean",
      "optional": true,
      "default": false
    },
    {
      "name": "chrom_sizes",
      "label": "chrom.sizes file",
      "class": "file",
      "optional": false
    },
    {
      "name": "as_file",
      "label": ".as file for bedToBigBed",
      "class": "file",
      "optional": true
    },
    {
      "name": "spp_version",
      "label": "The version of SPP to use",
      "class": "string",
      "default": "1.14"
    },
    {
      "name": "prefix",
      "label": "Basename for output files",
      "class": "string",
      "optional": true
    },
    {   
      "name": "fragment_length",
      "label": "use this fragment length instead of the one calculated from xcor",
      "class": "string",
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "peaks",
      "label": "Narrowpeaks file",
      "class": "file"
    },
    {
      "name": "xcor_plot",
      "label": "Cross-correlation plot",
      "class": "file"
    },
    {
      "name": "xcor_scores",
      "label": "Cross-correlation scores",
      "class": "file"
    },
    {
      "name": "peaks_bb",
      "label": "bigBed file",
      "class": "file",
      "optional": true
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/spp.py",
    "systemRequirements": {
      "main":     {"instanceType": "mem3_ssd1_x4"}
    },
    "assetDepends": [
      {"id": "record-Bzyq5700Ykg8g3jb8Q4XxYJF"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
